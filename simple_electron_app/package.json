{
  "name": "simple_electron_app",
  "version": "1.0.0",
  "description": "A test Electron app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.simple_electron_app",
    "win": {
      "target": [
        "nsis"
      ],
      "compression": "maximum"
    },
    "publish": {
      "provider": "github",
      "owner": "imcase", 
      "repo": "electron",
      "releaseType": "release",
      "url": "https://github.com/imcase/electron/releases"
    }
  },
  "dependencies": {
    "update-electron-app": "^2.0.2"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}
