{
  "name": "simple_electron_app",
  "version": "1.0.1",
  "description": "A test Electron app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.simple_electron_app",
    "win": {
      "target": [
        "nsis"
      ],
      "compression": "maximum",
      "artifactName": "simple_electron_app-Setup-${version}.exe"
    },
    "publish": {
      "provider": "github",
      "owner": "imcase",
      "repo": "electron"
    }
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}
